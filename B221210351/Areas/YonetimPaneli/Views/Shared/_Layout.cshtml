<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B221210351</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/B221210351.styles.css" asp-append-version="true" />

    <style>
        /* Stillemeler */
        .navbar {
            background-color: #333; /* Navbar arkaplan rengi */
        }

        .navbar-brand {
            color: #fff; /* Navbar marka metni rengi */
        }

        .navbar-nav .nav-link {
            color: #fff; /* Navbar link metinleri rengi */
        }

            .navbar-nav .nav-link:hover {
                color: #aaa; /* Navbar link metinleri hover rengi */
            }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mb-3">
            <div class="container">
                <!-- Navbar Markası -->
                <a class="navbar-brand" href="#">Admin Paneli</a>
                <!-- Navbar Toggle Butonu (Mobil) -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar Linkleri -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="yonetimPaneli" asp-controller="Doctor" asp-action="Index">Doktorlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="yonetimPaneli" asp-controller="Policlinic" asp-action="Index">Poliklinikler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="yonetimPaneli" asp-controller="User" asp-action="Index">Kullanıcılar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="yonetimPaneli" asp-controller="Appointment" asp-action="Index">Randevular</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - B221210351 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>