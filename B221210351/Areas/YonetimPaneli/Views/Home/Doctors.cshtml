@model DoctorPageVM
@* 
Her klinikte 5 doktor her doktor 1 gün nöbet tutar
herkes 8-16 arası çalışır. *@



<center>
    <div class="bg-white p-2 rounded" style="--bs-bg-opacity: .75;">

        <form class="opacity-100" style="width: 50%; " asp-action="addDoctor" asp-controller="Home" asp-area="yonetimPaneli">
            <div class="form-group">
                <label for="name">Ad: </label>
                <input type="text" class="form-control" asp-for="@Model.Doctor.DoctorName">
                <span asp-validation-for="@Model.Doctor.DoctorName"></span>
            </div>
            <div class="form-group">
                <label for="surname">Soyad: </label>
                <input type="text" class="form-control" asp-for="@Model.Doctor.DoctorSurname">
                <span asp-validation-for="@Model.Doctor.DoctorSurname"></span>
            </div>
            <div class="form-group">
                <label for="gender">Cinsiyet: </label>
                <select id="gender" asp-for="@Model.Doctor.Gender">
                    <option value="0">Erkek</option>
                    <option value="1">Kadın</option>
                </select>
            </div>
            <div class="form-group">
                <label for="policlinic">Poliklinik: </label>
                <select id="policlinic" asp-for="@Model.Doctor.PoliclinicId">
                    @foreach (var item in Model.Policlinics)
                    {
                        <option value="@item.PoliclinicId">@item.PoliclinicName</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Doktor Ekle</button>
        </form>
        <span>@TempData["hataMesaji"]</span>
    </div>
</center>
<br>

<table class="table table-dark">
    <tr>
        <td>
            Doktor Adı Soyadı
        </td>
        <td>
            Poliklinik
        </td>
        <td>
            Anabilim Dalı
        </td>
        <td>
            Cinsiyeti
        </td>
        <td>
            Nöbet Günleri
        </td>
        <td>
            Çalışma Saatleri
        </td>
    </tr>
    @foreach (var item in Model.Doctors)
    {
        <tr>
            <td>
                @item.DoctorName @item.DoctorSurname
            </td>
            <td>
                @item.Policlinic.PoliclinicName
            </td>
            <td>
                @item.Policlinic.Department.DepartmentName
            </td>
            <td>
                @item.Gender
            </td>
        </tr>
    }
</table>
<br />