@model AppDatasForAdminVM



<table class="table table-dark">
    <tr>
        <td>
            Kullanıcı Adı
        </td>
    </tr>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<br />

<a asp-action="addPoliclinic" asp-controller="Home" asp-area="yonetimPaneli">Poliklinik Ekle</a>
<table class ="table table-dark">
    <tr>
        <td>
            Poliklinik Adı
        </td>
        <td>
            Departman
        </td>
    </tr>
    @foreach (var item in Model.Policlinics)
    {
        <tr>
            <td>
                @item.PoliclinicName
            </td>
            <td>
                @item.Department.DepartmentName
            </td>
        </tr>
    }
</table>
<br />

<table class="table table-dark">
    <tr>
        <td>
            Doktor Adı Soyadı
        </td>
        <td>
            Poliklinik
        </td>
        <td>
            Anabilim Dalı
        </td>
        <td>
            Cinsiyeti
        </td>
        <td>
            TC Kimlik No
        </td>
        <td>
            Nöbet Günleri
        </td>
        <td>
            Çalışma Saatleri
        </td>
    </tr>
    @foreach (var item in Model.Doctors)
    {
        <tr>
            <td>
                @item.Name @item.Surname
            </td>
            <td>
                @item.Policlinic.PoliclinicName
            </td>
            <td>
                @item.Policlinic.Department.DepartmentName
            </td>
            <td>
                @item.Gender
            </td>
            <td>
                @item.PersonalId
            </td>
            <td>
        </tr>
    }
</table>
<br />

<a asp-action="addDepartment" asp-controller="Home" asp-area="yonetimPaneli">Anabilim Dalı Ekle</a>
<table class="table table-dark">
    <tr>
        <td>
            AnabilimDalı Adı
        </td>
    </tr>
    @foreach (var item in Model.Departments)
    {
        <tr>
            <td>
                @item.DepartmentName
            </td>
        </tr>
    }
</table>
<br />



