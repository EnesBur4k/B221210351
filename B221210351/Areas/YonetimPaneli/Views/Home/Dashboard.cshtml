@model AppDatasForAdminVM

<div class="row">
    <div class="col-md-6">
        <table class="table table-light table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Ad</th>
                    <th scope="col">Soyad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Patients)
                {
                    <tr>
                        <td>@item.PatientName</td>
                        <td>@item.PatientSurname</td>
                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-light table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Poliklinik Adı</th>
                    <th scope="col">Departman</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Policlinics)
                {
                    <tr>
                        <td>@item.PoliclinicName</td>
                        <td>@item.Department.DepartmentName</td>
                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-light table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">TC Kimlik No</th>
                    <th scope="col">Hasta Adı</th>
                    <th scope="col">Doktor Adı</th>
                    <th scope="col">Klinik</th>
                    <th scope="col">Randevu Tarihi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Appointments)
                {
                    <tr>
                        <td>@item.AppUser.PatientPersonalId</td>
                        <td>@item.AppUser.PatientName @item.AppUser.PatientSurname</td>
                        <td>@item.Doctor.DoctorName</td>
                        <td>@item.Policlinic.PoliclinicName</td>
                        <td>@item.AppointmentDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-light table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Doktor Adı Soyadı</th>
                    <th scope="col">Poliklinik</th>
                    <th scope="col">Anabilim Dalı</th>
                    <th scope="col">Cinsiyeti</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Doctors)
                {
                    <tr>
                        <td>@item.DoctorName @item.DoctorSurname</td>
                        <td>@item.Policlinic.PoliclinicName</td>
                        <td>@item.Policlinic.Department.DepartmentName</td>

                        @if (item.Gender)
                        {
                            <td>Kadın</td>
                        }
                        else
                        {
                            <td>Erkek</td>
                        }

                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-light table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">AnabilimDalı Adı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Departments)
                {
                    <tr>
                        <td>@item.DepartmentName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
