@{
    ViewData["Title"] = "Ana Sayfa";
}

<center>
    <div class="bg-white p-2 rounded" style="--bs-bg-opacity: .75;">

        <form class="opacity-100" style="width: 50%; " asp-action="GirisYap" asp-controller="Home">
            <div class="form-group">
                <label for="EMail">Kullanıcı Adı</label>
                <input type="email" class="form-control" id="EMail" name="EMail" placeholder="E-mail adresinizi giriniz.">
            </div>
            <div class="form-group">
                <label for="Parola">Parola</label>
                <input type="password" class="form-control" id="Parola" name="Parola" placeholder="Parolanızı giriniz.">
            </div>
            @* <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div> *@
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
            <small>Üye değil misiniz ?</small>
            <a asp-action="UyeOl" asp-controller="Home"/> Üye Ol</a>
        </form>
    </div>
</center>
