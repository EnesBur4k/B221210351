@model CreateUserVM
@{
    Layout = "_LoginLayout";
}


<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">


                    <form style="width: 23rem;" asp-action="Register" asp-controller="Home">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Kaydol</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="PatientName" type="text" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">Ad</label><br />
                            <span class="text-danger" asp-validation-for="PatientName"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="PatientSurname" type="text" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">Soyad</label><br />
                            <span class="text-danger" asp-validation-for="PatientSurname"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="PatientPersonalId" type="text" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">TC Kimlik No</label><br />
                            <span class="text-danger" asp-validation-for="PatientPersonalId"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">Email Adresi</label><br />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" id="form2Example28" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Parola</label><br />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">Kaydol</button>
                        </div>
                        <p>Hesabın var mı? <a asp-action="Login" asp-controller="Home">Giriş Yap</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-8 px-0 d-none d-sm-block">
                <img src="~/img/bg.webp"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>