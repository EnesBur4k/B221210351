@model CreateUserVM
@{
    Layout = "_LoginLayout";
}


<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 text-black">

                <div class="px-5 ms-xl-4">
                    <img src="~/img/logo.png" alt="Logo">
                    <div class="dropdown mt-3" style="float: right;">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Dil Seçin
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                            <li><a class="dropdown-item" href="/?culture=tr-TR">Türkçe</a></li>
                            <li><a class="dropdown-item" href="/?culture=en-US">English</a></li>
                        </ul>
                    </div>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">


                    <form style="width: 23rem;" asp-action="Register" asp-controller="Home">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">@ViewBag.Register</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="PatientPersonalId" type="text" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">@ViewBag.PersonalId</label><br />
                            <span class="text-danger" asp-validation-for="PatientPersonalId"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="PatientName" type="text" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">@ViewBag.Name</label><br />
                            <span class="text-danger" asp-validation-for="PatientName"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="PatientSurname" type="text" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">@ViewBag.Surname</label><br />
                            <span class="text-danger" asp-validation-for="PatientSurname"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <select id="gender" class="form-control form-control-lg" asp-for="PatientGender">
                                <option value="False">Erkek</option>
                                <option value="True">Kadın</option>
                            </select>
                            <label class="form-label" for="form2Example18">@ViewBag.Gender</label><br />
                            <span class="text-danger" asp-validation-for="PatientGender"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">@ViewBag.Email</label><br />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" id="form2Example28" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">@ViewBag.Password</label><br />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">@ViewBag.Register</button>
                        </div>
                        <p>@ViewBag.DoHaveAccount <a asp-action="Login" asp-controller="Home">@ViewBag.Login</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-8 px-0 d-none d-sm-block">
                <img src="~/img/bg.webp"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>