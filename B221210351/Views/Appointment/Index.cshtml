@model CreateAppointmentVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body" style="background-color: whitesmoke;">
                    <h3 class="card-title text-center mb-4">Randevularım</h3>
                    <div class="table-responsive mt-4">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Randevu Durumu</th>
                                    <th scope="col">Randevu Tarihi</th>
                                    <th scope="col">Klinik</th>
                                    <th scope="col">Doktor Adı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Appointments)
                                {
                                    <tr>
                                        <td>@item.AppointmentState</td>
                                        <td>@item.AppointmentDate</td>
                                        <td>@item.Policlinic.PoliclinicName</td>
                                        <td>@item.Doctor.DoctorName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<form asp-action="CreateAppointment" asp-controller="Appointment">

    <div class="form-group">
        <label for="policlinic">Klinik: </label>
        <select id="policlinic" asp-for="@Model.Policlinic.PoliclinicId" class="form-control">
            @foreach (var item in Model.Policlinics)
            {
                <option value="@item.PoliclinicId">@item.PoliclinicName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="doctor">Doktor: </label>
        <select id="doctor" asp-for="Doctor.DoctorId" class="form-control">
            @foreach (var item in Model.Doctors)
            {
                <option value="@item.DoctorId">@item.DoctorName @item.DoctorSurname</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="appointmentDate">Tarih: </label>
        <input type="datetime-local" asp-for="@Model.Appointment.AppointmentDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary btn-block">Randevu Al</button>

    <div class="mt-4">
        <span class="text-danger font-weight-bold">@TempData["hataMesaji"]</span>
        <span class="text-success">@TempData["randevu"]</span>
    </div>
</form>