<

<form class="opacity-100" style="width: 50%; " asp-action="CreateAppointment" asp-controller="Appointment">
    <div class="form-group">
        <label for="policlinic">Klinik: </label>
        <select id="policlinic" asp-for="@Model.Policlinic.PoliclinicId">
            @foreach (var item in Model.Policlinics)
            {
                <option value="@item.PoliclinicId">@item.PoliclinicName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="policlinic">Doktor: </label>
        <select id="policlinic" asp-for="Doctor.DoctorId">
            @foreach (var item in Model.Doctors)
            {
                <option value="@item.DoctorId">@item.DoctorName @item.DoctorSurname</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="policlinic">Tarih: </label>
        <input type="datetime-local" asp-for="@Model.Appointment.AppointmentDate" />
    </div>
    <button type="submit" class="btn btn-primary">Doktor Ekle</button>
</form>
<span>@TempData["hataMesaji"]</span>

<a asp-action="Logout" asp-controller="Home">Çıkış Yap</a>

<table class="table table-dark">
    <tr>
        <td>
            Randevu Tarihi
        </td>
        <td>
            Klinik
        </td>
        <td>
            Doktor Adı
        </td>
        @foreach (var item in Model.Appointments)
        {
        <tr>
            <td>
                    @item.AppointmentDate
            </td>
            <td>
                    @item.Policlinic.PoliclinicName
            </td>
            <td>
                    @item.Doctor.DoctorName
            </td>
        </tr>
        }
</table>
