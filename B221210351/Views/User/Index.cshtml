@model UpdateUserVM

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 form-container">
            <h2 class="text-center mb-4">Bootstrap Form Örneği</h2>
            <form asp-action="Index" asp-controller="User">
                <div class="form-group">
                    <label for="name">Ad</label>
                    <input type="text" class="form-control" id="name" asp-for="PatientName">
                </div>
                <div class="form-group">
                    <label for="surname">Soyad</label>
                    <input type="text" class="form-control" id="surname" asp-for="PatientSurname">
                </div>
                <div class="form-group">
                    <label for="telNo">Telefon Numarası</label>
                    <input type="text" class="form-control" id="telNo" asp-for="PhoneNumber">
                </div>
                <div class="form-group">
                    <label for="email">Email Adresi</label>
                    <input type="email" class="form-control" id="email" asp-for="Email">
                </div>
                <div class="form-group">
                    <label for="gender">Cinsiyet</label>
                    <select class="form-control" id="gender" asp-for="PatientGender">
                        <option value="0">Erkek</option>
                        <option value="1">Kadın</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="datepicker">Doğum Tarihi:</label>
                    <input type="date" class="form-control" id="datepicker" asp-for="PatientBirthDay">
                </div>

                @* <div class="form-group">
                    <label for="exampleInputPassword">Parola</label>
                    <input type="password" class="form-control" id="password" asp-for="PatientName">
                </div> *@
                <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                <text class="text-success">@TempData["userUpdate"]</text>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $('#datepicker').change(function () {
            var selectedDate = $(this).val();
            console.log("Seçilen tarih: " + selectedDate);
            // Burada seçilen tarihi alabilir ve işleyebilirsiniz.
        });
    });
</script>